rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public writes to the quote request upload path for debugging
    match /quoteRequests/{quoteId}/uploads/{allPaths=**} {
      allow write: if true;
    }

    // Allow public read access for testing, but restrict writes to authenticated users.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
