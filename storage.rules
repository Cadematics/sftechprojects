rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public writes to the quote request upload path for debugging
    match /quoteRequests/{quoteId}/uploads/{allPaths=**} {
      allow write: if true;
    }

    // Default rule: only authenticated users can read/write other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}