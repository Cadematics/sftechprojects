rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow public upload only to quoteRequests folder
    match /quoteRequests/{quoteId}/uploads/{fileName} {
      allow write: if true;
      allow read: if true;  // or false if you want private files
    }

    // Default deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
